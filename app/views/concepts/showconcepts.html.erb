<h3> ALL concepts </h3>

<% if @concepts.count > 0 %>
	<% @concepts.each do |concept| %>
		<div id="rate">
			<%= concept.title %> <br><br>

			<%= form_tag(:action => "make_rating") do %>
				<%= hidden_field_tag :user_id, @user.id %>
				<%= hidden_field_tag :concept_id, concept.id %>
				<%= hidden_field_tag :opinion, 1 %>

				<%= submit_tag("Like!") %>
			<% end %>

	<br><br>

			<%= form_tag(:action => "make_rating") do %>
				<%= hidden_field_tag :user_id, @user.id %>
				<%= hidden_field_tag :concept_id, concept.id %>
				<%= hidden_field_tag :opinion, 2 %>

				<%= submit_tag("Dislike!") %>
			<% end %>

	<br><br>
			<%= form_tag(:action => "make_rating") do %>
				<%= hidden_field_tag :user_id, @user.id %>
				<%= hidden_field_tag :concept_id, concept.id %>
				<%= hidden_field_tag :opinion, 3 %>

				<%= submit_tag("Neutral") %>
			<% end %>


		 <br><br>
		</div>
	<% end %>

<% else %>
	<p> You already rated everything..waiting for more stuff to rate</p>
<% end %>


