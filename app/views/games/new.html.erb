<h2> Create new Game </h2>

	<%= form_tag(:action => "make_new_game") do %>
	<table>
		<tr>
			<td><%= label_tag(:name) %></td>
			<td><%= text_field_tag(:name) %></td>
		</tr>
		<tr>

		<h4>Include the following Users</h4>
		<% @users.each do |user| %>
			
			<% unless user.id == @user_id %>
				<h4><input type="checkbox" name="players[]" value="<%= user.id %>" /> <%= user.name %></input></h4>
			<% end %>
		<% end %>


	<%= hidden_field_tag :user_id, @user_id %>

		</tr>
		<tr>

				<h4>...and name the Group</h4>
			<td>&nbsp;</td>
			<td><%= submit_tag("Create Group!") %></td>
		</tr>
	</table>
	<% end %>



