<!DOCTYPE html>
<html>
<head>
  <title>Head2Head2</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>

<div class="container">

	<div id="flash_messages">
	  <% flash.each do |key, value| %>
	    <%= content_tag(:div, value, :class => "flash #{key}") %>
	  <% end %>
	</div>


    <div class="row">
      <div class="navbar navbar-default navbar-static">
        <div class="row small-screen-logo">
          <div class="col-sm-2">
            <button class="navbar-toggle" data-toggle="collapse" data-target=".navHeaderCollapse">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>                
            </button>        
          </div>
          <div class="col-sm-10">
            <a href="/">Head2Head2</a>
          </div>
      </div>

        <!-- target collapse area when button pressed -->

        <div class="collapse navbar-collapse navHeaderCollapse"> 
          <!-- shows up on mobile -->
              <ul class="nav navbar-nav navbar-left">

              	<% if session[:username] %>
                	<li><%= link_to("Logout",  {:controller => "access", :action => "logout"}) %></li>
                	<li> <%= link_to("View Users",  {:controller => "users", :action => "index"}) %></li>
                	<li><%= link_to("Create New Game",  {:controller => "games", :action => "new"}) %></li>
                	<li><%= link_to("View ALL Games",  {:controller => "games", :action => "index"}) %></li>
               		<li><%= link_to("View MY Games",  {:controller => "games", :action => "mygames"}) %></li>
                	<li><%= link_to("Rate Things",  {:controller => "concepts", :action => "showconcepts"}) %></li>                          
                	</ul>

					<% else %>
                	<li><%= link_to("Sign Up!", new_user_path) %></li>
                 	<li><%= link_to("Login",  {:controller => "access", :action => "login"}) %></li>
                           
                           		</ul>
	<%end%> 	               						
		<ul>




              </ul>
          </div>

        </div>
    </div>



	<% if session[:user_id] %>
		<%= session[:user_id] %>
	<%end%>



	<% if session[:user_id] %>


	<ul>
		<li> Welcome, <%= session[:username] %> </li>
		SCORE: <%= User.find(session[:user_id]).average %>

				
		<%end%>




<%= yield %>

</div><!-- end container -->

</body>
</html>
