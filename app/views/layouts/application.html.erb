<!DOCTYPE html>
<html>

<head>
  <title>Head-to-Head</title>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>

  <%= csrf_meta_tags %>

  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
</head>

<body>

<div class="container">

	<div id="flash_messages">
	  <% flash.each do |key, value| %>
	    <%= content_tag(:div, value, :class => "flash #{key}") %>
	  <% end %>
	</div>

	<div class="row">
  	<div class="col-md-12">
  		<% if session[:user_id] %>
  		<h5>Welcome, <%= session[:username] %> </h5>
  		<h5>Score: <%= User.find(session[:user_id]).average %></h5>
  	<%end%>

  	<span class="text-center"><h1>Head-to-Head</h1></span>
  	</div>
	</div>


    <div class="row"> <!-- start navbar -->
      <div class="navbar navbar-default navbar-static">
        <div class="row small-screen-logo">
          <div class="col-md-12">
            <button class="navbar-toggle" data-toggle="collapse" data-target=".navHeaderCollapse">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>                
            </button>        
          </div>
  
      </div>

        <!-- target collapse area when button pressed -->

        <div class="collapse navbar-collapse navHeaderCollapse"> 
          <!-- shows up on mobile -->
              <ul class="nav navbar-nav navbar-left">

              	<% if session[:username] %>
                	<li><%= link_to("Logout",  {:controller => "access", :action => "logout"}) %></li>
                	<li> <%= link_to("View Users",  {:controller => "users", :action => "index"}) %></li>
               		<li><%= link_to("GUESS",  {:controller => "games", :action => "mygames"}) %></li>
                	<li><%= link_to("RATE",  {:controller => "concepts", :action => "showconcepts"}) %></li>                          
                	</ul>

				<% else %>
                	<li><%= link_to("Sign Up!", new_user_path) %></li>
                 	<li><%= link_to("Login",  {:controller => "access", :action => "login"}) %></li>
                           
                    </ul>
				<%end%> 	               						
              </ul>
          </div>
        </div>
    </div> <!-- end navbar -->





<%= yield %>

</div><!-- end container -->

</body>
</html>
