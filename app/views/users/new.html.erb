<h2> Sign Up </h2>

<%= form_for @user do |f| %>


   <%= f.label :name %>
   <%= f.text_field :name %><br /><br />

   <%= f.label :email %>
   <%= f.text_field :email %><br /><br />

   <%= f.label :password %>
   <%= f.text_field :password %><br /><br />


  <%= f.label :choose_your_group %> <br /><br />
  <select name="user[game_id]">
      <% Game.all.each do |game| %>
          <option value="<%= game.id %>"><%= game.title %></option>
      <% end %>
  </select>


<br /> <br />

   <%= f.submit %>



<% end %>









